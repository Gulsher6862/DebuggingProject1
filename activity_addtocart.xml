<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0000"
    tools:context=".Addtocart">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="417dp"
        android:layout_height="101dp"
        android:background="@color/design_default_color_on_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="407dp"
        android:layout_height="291dp"
        app:srcCompat="@drawable/logooo"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Size: 1.67"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="452dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="376dp"
        android:layout_height="37dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Price :49.99$"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="523dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="385dp"
        android:layout_height="59dp"
        android:background="@color/design_default_color_on_secondary"
        android:text="ADD TO CART"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFC400"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="589dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="375dp"
        android:layout_height="43dp"
        android:background="@color/design_default_color_on_secondary"
        android:text="Buy Now"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFC400"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="660dp" />

</androidx.constraintlayout.widget.ConstraintLayout>